@page
@model FairwayManager.Pages.Members.EditModel
@using FairwayManager.Models

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center mb-4 mt-4">
    <h1>Edit Member</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.MembershipID" />
            <div class="form-group">
                <label asp-for="Member.Name" class="control-label"></label>
                <input asp-for="Member.Name" class="form-control" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Sex" class="control-label"></label>
                <select asp-for="Member.Sex" asp-items="Html.GetEnumSelectList<Sex>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Member.Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" class="form-control" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Handicap" class="control-label"></label>
                <input asp-for="Member.Handicap" class="form-control" />
                <span asp-validation-for="Member.Handicap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success mt-3" />
                <a asp-page="Index" class="btn btn-danger mt-3">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
